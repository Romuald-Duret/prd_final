<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="@color/backgroundblue">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/rounded_border"
        android:elevation="7dp"
        android:gravity="center">


        <TextView
            android:id="@+id/jitter_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textColor="@color/baseblue"
            android:text="Analyse jitter"
            android:textSize="25sp"
            android:fontFamily="@font/lgc"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center"
        android:layout_margin="10dip"
        android:padding="12dp"
        android:background="@drawable/rounded_border"
        android:elevation="7dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/jitter_line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </com.github.mikephil.charting.charts.LineChart>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/buttonDateLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/rounded_border"
        android:elevation="7dp">


        <ImageView
            android:id="@+id/startDate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/endDateDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Choisissez la date que vous souhaitez voir"
            android:textAlignment="center"
            android:fontFamily="@font/lgc"/>


        <ImageView
            android:id="@+id/resetDate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_repeat_black"/>

    </LinearLayout>

</LinearLayout>