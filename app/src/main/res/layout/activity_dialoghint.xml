<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_border"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="@font/lgc"
        android:text="Informations d'utlisation"
        android:textAlignment="center">

    </TextView>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        android:clipToPadding="false"/>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:ci_drawable="@drawable/ic_dot"
        app:ci_gravity="center"
        app:ci_height="8dp"
        app:ci_width="8dp"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/check_box_dialog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:buttonTint="@color/baseblue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lgc"
                android:text=" : Ne plus afficher"/>




        </LinearLayout>


        <Button
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:fontFamily="@font/lgc"
            android:clickable="false"
            android:text="j'ai compris"
            android:textColor="@color/gray"
            android:background="@drawable/rounded_border"
            android:id="@+id/understand_button"
            android:elevation="7dp"/>

    </LinearLayout>



</LinearLayout>